<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.network.mylittletale.tale.model.dao.TaleMapper">
    <resultMap id="taleDTOResult" type="com.network.mylittletale.tale.model.dto.TaleDTO">
        <id property="taleNo" column="TALE_NO"/>
        <result property="taleName" column="TALE_NAME"/>
        <result property="memberNo" column="MEMBER_NO"/>
        <result property="creationDate" column="CREATION_DATE"/>
        <result property="lastLookupDate" column="LAST_LOOKUP_DATE"/>
    </resultMap>


    <select id="findTaleList" resultMap="taleDTOResult">
        SELECT
               A.TALE_NO
             , A.TALE_NAME
             , A.MEMBER_NO
             , A.CREATION_DATE
             , A.LAST_LOOKUP_DATE
          FROM TBL_TALE A
    </select>
</mapper>
